{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
  },
  "type": "module",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.controller.ts",
    "src/**/*.service.ts",
    "src/**/*.routes.ts",
    "src/**/*.Types.ts",
    "src/log/index.ts",
    "src/models/faqs_Mongoose.js",
    "src/seedData.js",
  ],
  "exclude": ["node_modules", "**/*.spec.ts"],
}
